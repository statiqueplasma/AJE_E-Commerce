<style>
    .hr {
        color: grey;
        height: 2px;
        width: 90%;
        margin: auto 0.5rem auto 0.5rem;
    }

    p {
        float: left;
        margin: 0;

    }
</style>


<div class="modal fade" tabindex="-1" id="add-category">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/management/category" method="POST">
                    <div class="form-group">
                        <label for="name">Category's Name</label>
                        <input required type="text" name="name" id="name" class="form-control">
                    </div>
                    <button style="float:right;" type="submit" class="primary-btn">Add Category</button>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="add-size">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a Size</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/management//size" method="POST">
                    <div class="form-group">
                        <label for="name">Size</label>
                        <input required type="text" name="name" id="name" class="form-control">
                    </div>
                    <button style="float:right;" type="submit" class="primary-btn">Add Category</button>
                </form>
            </div>

        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" id="add-color">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a Color</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/management/color" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Color's Name</label>
                        <input required type="text" name="name" id="name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="picture">Color's Image Representative</label>
                        <input required type="file" name="picture" id="picture" class="form-control">
                    </div>
                    <button style="float:right;" type="submit" class="primary-btn">Add Category</button>
                </form>
            </div>

        </div>
    </div>
</div>



<div style="justify-content: center; display: flex ;" class="row management">

    <div class="card col-xs-12 col-md-6">
        <div class="title-block">
            <h1>Categories</h1>
            <a href="#" data-bs-toggle="modal" data-bs-target="#add-category" class="primary-btn"><i
                    class="fas fa-plus-square"></i></a>
        </div>
        {{#each categories}}
        <div classe="management-object">
            <p>name: {{name}}</p>
            <form id="del-item-form" action="/management/del-cat/{{_id}}?_method=DELETE" method="POST"> <button
                    style="float: right; width: max-content; " type="submit" class="btn btn-danger"><i
                        class="fas fa-trash-alt"></i></button></form>
        </div>
        <hr>

        {{/each}}
    </div>
    </br>
    <div class="card col-xs-12 col-md-6">
        <div class="title-block">
            <h1>Sizes</h1>
            <a href="#" data-bs-toggle="modal" data-bs-target="#add-size" class="primary-btn"><i
                    class="fas fa-plus-square"></i></a>
        </div>
        {{#each sizes}}
        <div classe="management-object">
            <p>name: {{name}}</p>
            <form action="/management/del-size/{{_id}}?_method=DELETE" method="POST"> <button
                    style="float: right; width: max-content; " type="submit" class="btn btn-danger"><i
                        class="fas fa-trash-alt"></i></button></form>

        </div>
        <hr>

        {{/each}}
    </div>
    </br>

</div>
<div style="justify-content: center; display: flex ;" class="row management">
    <div class="card col-lg-6">
        <div class="title-block">
            <h1>Colors</h1>
            <a href="#" data-bs-toggle="modal" data-bs-target="#add-color" class="primary-btn"><i
                    class="fas fa-plus-square"></i></a>
        </div>
        {{#each colors}}
        <div classe="management-object">
            <p>name: {{name}} | picture: <img style="width: 3rem;" src={{picture}} alt="">
            </p>
            <form action="" method="POST"> <button
                    style="float: right; width: max-content; " type="submit" class="btn btn-danger"><i
                        class="fas fa-trash-alt"></i></button></form>

        </div>
        <hr>

        {{/each}}
    </div>
</div>
<div style="justify-content: center; display: flex ;" class="row management">
    <div id="item-table" class="card col-lg-12 table-responsive">
        <div class="title-block">
            <h1>Items</h1>
            <a href="/management/add-item" class="primary-btn"><i class="fas fa-plus-square"></i></a>
        </div>
        <table style="height:2000px"class="table table-striped table-hover table-bordered ">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Thumbnail</th>
                    <th scope="col">Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Category</th>
                    <th scope="col">Colors</th>
                    <th scope="col">Sizes</th>
                    <th scope="col">Rate</th>
                    <th scope="col">In Stock</th>
                    <th scope="col">Promo</th>
                    <th scope="col">Solding Price</th>
                    <th scope="col">Added Date</th>
                    <th scope="col">
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                    <th scope="row">{{@index}}: {{this}}</th>
                    <td><img style="width:1.5rem" src="/{{thumbnail}}" alt=""></td>
                    <th scope="col">{{name}}</th>
                    <th scope="col">{{gender}}</th>
                    <th scope="col">{{category}}</th>
                    <th scope="col">{{olors}}</th>
                    <th scope="col">{{sizes}}</th>
                    <th scope="col">{{rate}}</th>
                    <th scope="col">{{inStock}}</th>
                    <th scope="col">{{promo}}</th>
                    <th scope="col">{{sold_price}}</th>
                    <th scope="col">{{date}}</th>
                    <th scope="col">
                        <form action="/management/del-item/{{_id}}?_method=DELETE" method="POST"> <button
                    style="float: right; width: max-content; " type="submit" class="btn btn-danger"><i
                        class="fas fa-trash-alt"></i></button></form>
                </form>
                    </th>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>

