<style>
    .card {
        width: 60%;
        padding: 1rem;
    }

    .hr {
        color: grey;
        height: 2px;
        width: 90%;
        margin: auto 0.5rem auto 0.5rem;
    }

    p {
        float: left;
        margin: 0;

    }

    .title-block {
        display: flex;
    }

    .management-object {
        display: block;
        align-items: center;
        justify-content: center;
    }

    .modal {
        z-index: 9999999;
        background-color: rgb(0, 0, 0, 0.5);
    }

    .title-block a {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        height: 2.5rem;
        width: 2.5rem;
        margin-left: 2rem;
    }
</style>


<div class="modal fade" tabindex="-1" id="add-category">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/management/category" method="POST">
                    <div class="form-group">
                        <label for="name">Category's Name</label>
                        <input required type="text" name="name" id="name" class="form-control">
                    </div>
                    <button style="float:right;" type="submit" class="primary-btn">Add Category</button>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="add-size">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a Size</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/management//size" method="POST">
                    <div class="form-group">
                        <label for="name">Size</label>
                        <input required type="text" name="name" id="name" class="form-control">
                    </div>
                    <button style="float:right;" type="submit" class="primary-btn">Add Category</button>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="add-color">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a Color</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/management/color" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Color's Name</label>
                        <input required type="text" name="name" id="name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="picture">Color's Image Representative</label>
                        <input required type="file" name="picture" id="picture" class="form-control">
                    </div>
                    <button style="float:right;" type="submit" class="primary-btn">Add Category</button>
                </form>
            </div>

        </div>
    </div>
</div>


<div class="card">
    <div class="title-block">
        <h1>Categories</h1>
        <a href="#" data-bs-toggle="modal" data-bs-target="#add-category" class="primary-btn"><i
                class="fas fa-plus-square"></i></a>
    </div>
    {{#each categories}}
    <div classe="management-object">
        <p>name: {{name}}</p>
        <form action="/management/del-cat/{{_id}}?_method=DELETE" method="POST"> <button style="float: right; width: max-content; "
                type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></form>
    </div>
    <hr>

    {{/each}}
</div>
</br>
<div class="card">
    <div class="title-block">
        <h1>Sizes</h1>
        <a href="#" data-bs-toggle="modal" data-bs-target="#add-size" class="primary-btn"><i
                class="fas fa-plus-square"></i></a>
    </div>
    {{#each sizes}}
    <div classe="management-object">
        <p>name: {{name}}</p>
        <form action="/management/del-size/{{_id}}?_method=DELETE" method="POST"> <button style="float: right; width: max-content; "
                type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></form>

    </div>
    <hr>

    {{/each}}
</div>
</br>
<div class="card">
    <div class="title-block">
        <h1>Colors</h1>
        <a href="#" data-bs-toggle="modal" data-bs-target="#add-color" class="primary-btn"><i
                class="fas fa-plus-square"></i></a>
    </div>
    {{#each colors}}
    <div classe="management-object">
        <p>name: {{name}} | picture: <img style="width: 3rem;" src={{picture}} alt="">
        </p>
        <form action="/management/del-color/{{_id}}?_method=DELETE" method="POST"> <button style="float: right; width: max-content; "
                type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></form>

    </div>
    <hr>

    {{/each}}
</div>