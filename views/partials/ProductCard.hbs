<div id={{_id}} class="card" >
    <div class="card-top">
        {{#if promo}}
        <div class="sale">
            <p>-{{promo}}%</p>
        </div>
        {{/if}}
        <img class="thumbnail" src={{thumbnail}} alt="">

    </div>
    <div class="card-bottom">

        <p class="name">{{name}}</p>
        <p class="snippet">{{snippet}}</p>

        <div class="price-see-more">
            <div class="prices">
                {{#if promo}}
                <p class="old-price">{{normalPrice}} MAD</p>
                <p class="current-price">{{normalPrice}} MAD</p>
                {{else}}
                <p class="current-price">{{normalPrice}} MAD</p>
                </h5>
                {{/if}}


            </div>
            <a class="see-more" href="#">Add to Cart</a>
        </div>
    </div>
</div>

