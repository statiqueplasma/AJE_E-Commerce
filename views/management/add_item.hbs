<div class="add-form">
    <h1>Add Item</h1>
    <form action="/management/item" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Item's Name</label>
            <input required type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="snippet">Item's Snippet</label>
            <input required type="text" name="snippet" id="snippet" class="form-control">
        </div>
        <div class="form-group">
            <label for="description">Item's Description</label>
            <textarea required style="height:400px;" name="description" id="description"
                class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="thumbnail">Item's Thumbnail</label>
            <input required type="file" name="thumbnail" id="thumbnail" class="form-control">
        </div>
        
        <div class="form-group">
            <label for="price">Item's Price per Unit (in "MAD")</label>
            <input style="width: 100px;" required type="number" name="price" id="price" class="form-control">
        </div>
        <div class="form-group">
            <label for="promo">Promo</label>
            <input style="width: 100px;" type="number" name="promo" id="promo" class="form-control">
        </div>
        <div class="form-group">
            <label for="inStock">Quantity in Stock</label>
            <input style="width: 100px;" required type="number" name="inStock" id="inStock" class="form-control">
        </div>
        <div class="form-group gender">Gender:
            <div class="choices">
                <div class="form-check">
                    <input required type="radio" name="gender" id="male" value="male" class="form-check-input">
                    <label for="male" class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                    <input required type="radio" name="gender" id="female" value="female" class="form-check-input">
                    <label for="female" class="form-check-label">Female</label>
                </div>
                <div class="form-check">
                    <input required type="radio" name="gender" id="both" value="both" class="form-check-input">
                    <label for="both" class="form-check-label">both</label>
                </div>
            </div>
        </div>
        <div class="form-group ">Sizes:
            <div class="choices">
                {{#each sizes}}
                <div class="form-check">
                    <input type="checkbox" value={{name}} name="sizes" id="{{name}}" class="form-check-input">
                    <label for="{{name}}">{{name}}</label>
                </div>
                {{/each}}
            </div>
        </div>
        

        <button type="submit" class="primary-btn">Save & Next</button>


    </form>
</div>

<script>
    ClassicEditor
        .create(document.querySelector('#description'), {

            ckfinder: {
                // Upload the images to the server using the CKFinder QuickUpload command.
                uploadUrl: '/management/uploads'
            }
        });
</script>