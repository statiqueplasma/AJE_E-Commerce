

<div class="add-form">
    <h1>Add Item</h1>
    <form action="/management/edit-item?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Item's Name</label>
            <input value="{{item.name}}" required type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="snippet">Item's Snippet</label>
            <input value="{{item.snippet}}" required type="text" name="snippet" id="snippet" class="form-control">
        </div>
        <div class="form-group">
            <label for="description">Item's Description</label>
            <textarea required style="height:400px;" name="description" id="description"
                class="form-control">{{item.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="thumbnail">Item's Thumbnail</label>
            <img src="/{{item.thumbnail}}" alt="">
            <input required type="file" name="thumbnail" id="thumbnail" class="form-control">
        </div>
        <div class="form-group">
            <label for="pictures">Item's Pictures</label>
            <div class="pictures-show">
                    {{#each item.pictures}}
                        <div class="pcture-element">
                            <img src="/{{this}}" alt="">
                        </div>
                    {{/each}}
            </div>
            <input required type="file" name="pictures" id="pictures" class="form-control" multiple>
        </div>
        <div class="form-group">
            <label for="price">Item's Price per Unit (in "MAD")</label>
            <input value="{{item.normalprice}}" style="width: 100px;" required type="number" name="price" id="price" class="form-control">
        </div>
        <div class="form-group">
            <label for="promo">Promo</label>
            <input value="{{item.promo}}" style="width: 100px;" type="number" name="promo" id="promo" class="form-control">
        </div>
        <div class="form-group">
            <label for="inStock">Quantity in Stock</label>
            <input style="width: 100px;" required type="number" name="inStock" id="inStock" class="form-control">
        </div>
        <div class="form-group gender">Gender:
            <div class="choices">
                <div class="form-check">
                    <input required type="radio" name="gender" id="male" value="male" class="form-check-input">
                    <label for="male" class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                    <input required type="radio" name="gender" id="female" value="female" class="form-check-input">
                    <label for="female" class="form-check-label">Female</label>
                </div>
                <div class="form-check">
                    <input required type="radio" name="gender" id="both" value="both" class="form-check-input">
                    <label for="both" class="form-check-label">both</label>
                </div>
            </div>
        </div>
        <div class="form-group ">Sizes:
            <div class="choices">
                {{#each sizes}}
                <div class="form-check">
                    <input type="checkbox" value={{name}} name="sizes" id="{{name}}" class="form-check-input">
                    <label for="{{name}}">{{name}}</label>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="form-group">
            <label for="category">Category:</label>
            <select value="{{item.category}}" required name="category" id="category" class="form-select" aria-label="Default select example">
                <option value="" selected disabled hidden>Choose category</option>
                {{#each categories}}
                <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select>
        </div>

        <button type="submit" class="primary-btn">Next</button>


    </form>
</div>

